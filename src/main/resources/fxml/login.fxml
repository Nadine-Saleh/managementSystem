<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.managementsystem.erp.ui.controllers.LoginController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #F5F7FA;">

    <children>
        <VBox alignment="CENTER" spacing="20"
              AnchorPane.leftAnchor="50.0"
              AnchorPane.rightAnchor="50.0"
              AnchorPane.topAnchor="70.0">

            <Label text="Login"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #BC6C25;" />

            <TextField fx:id="emailField" promptText="Email"
                       style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px; -fx-padding: 10;" />

            <PasswordField fx:id="passwordField" promptText="Password"
                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px; -fx-padding: 10;" />

            <Button text="Login" fx:id="loginBtn" onAction="#handleLogin"
                    style="-fx-background-color: #BC6C25; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10 20;" />

            <Hyperlink text="Don't have an account? Sign up"
                       onAction="#goToSignUp"
                       style="-fx-text-fill: #BC6C25; -fx-font-size: 14px;" />

        </VBox>
    </children>
</AnchorPane>
